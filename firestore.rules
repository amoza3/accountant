
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for superadmin role
    function isSuperAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'superadmin';
    }

    // Rules for the main user profiles collection
    match /users/{userId} {
      // Any authenticated user can read their OWN profile
      // Only a superadmin can read ANY user's profile
      allow read: if request.auth.uid == userId || isSuperAdmin(request.auth.uid);
      
      // Any authenticated user can create their OWN profile
      // A superadmin can update any user's profile (e.g., to change a role)
      allow write: if request.auth.uid == userId || isSuperAdmin(request.auth.uid);
    }

    // Rules for all subcollections within a user's document
    // This covers products, sales, settings, customers, etc.
    match /users/{userId}/{document=**} {
      // A user can only read and write to their own data.
      allow read, write: if request.auth.uid == userId;
    }

    // Explicitly deny listing all users for non-superadmins
    match /users {
      allow list: if isSuperAdmin(request.auth.uid);
      // Deny get, create, update, delete on the collection itself for all
      allow get, create, update, delete: if false;
    }
  }
}
